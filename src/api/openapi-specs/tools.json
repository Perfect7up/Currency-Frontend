  "paths": {
    "/api/Tools/convert": {
      "get": {
        "tags": ["Tools"],
        "parameters": [
          {
            "name": "from",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "to",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "amount",
            "in": "query",
            "schema": {
              "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
              "type": ["number", "string"],
              "format": "double",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
                  "type": ["number", "string"],
                  "format": "double"
                }
              },
              "application/json": {
                "schema": {
                  "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
                  "type": ["number", "string"],
                  "format": "double"
                }
              },
              "text/json": {
                "schema": {
                  "pattern": "^-?(?:0|[1-9]\\d*)(?:\\.\\d+)?$",
                  "type": ["number", "string"],
                  "format": "double"
                }
              }
            }
          }
        }
      }
    },
    "/api/coins/compare": {
